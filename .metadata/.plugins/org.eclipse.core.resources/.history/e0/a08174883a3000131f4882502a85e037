		<script>
			function initMaps() {
				var emLatLng = new google.maps.LatLng(44.5403, -78.5463);
				
				var ncloc = document.getElementById('ncloc');
				var emloc = document.getElementById('emloc');
				var ncMapOptions = {
					center : emLatLng,
					zoom : 8,
					mapTypeId : google.maps.MapTypeId.ROADMAP
				};
				var emmap = new google.maps.Map(emloc, emMapOptions);
				var marker = new google.maps.Marker({
					position :  emLatLng,
					map : emmap,
					title : 'Hello World!'
				});

				var emMapOptions = {
					center : new google.maps.LatLng(18.627514, 73.82115),
					zoom : 12,
					mapTypeId : google.maps.MapTypeId.ROADMAP
				};
				var ncmap = new google.maps.Map(ncloc, ncMapOptions);
				

			}


			google.maps.event.addDomListener(window, 'load', initMaps);
		</script>
